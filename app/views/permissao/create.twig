<div class="form-group custom-margin-top">
    <div class="col-xs-12">
        <fieldset>
            <legend>
                Permissoes</legend>
            <table width="100%" cellspacing="2">
                <th width="30%">
                    <table width="100%" style="border-bottom:1px solid lightblue">
                        <tr>
                            Funcionalidade
                        </tr>
                    </table>
                </th>
                <th width="40%">
                    <table width="100%" style="border-bottom:1px solid lightblue">
                        <tr>
                            <td>Acao</td>
                        </tr>
                    </table>
                </th>
                <th>
                    <table width="100%" style="border-bottom:1px solid lightblue">
                        <tr>
                            <td>Permitir</td>
                        </tr>
                    </table>
                </th>
                {% set auxNomeFunc = '' %}
                {% for acaofuncionalidade in acoesfuncionalidades %}

                    {% if (acaofuncionalidade.pai_id is null) %}
                        {% set auxNomeFunc = '' %}
                        <tr>
                            <td>
                                <span class="glyphicon glyphicon-sort-by-attributes-alt" aria-hidden="true"></span>&nbsp;{{acaofuncionalidade.nome_funcionalidade}}</div>
                        </td>
                        <td colspan="2">
                            <table width="100%" style="border-bottom:1px solid lightblue">
                                <tr>
                                    <td><input type="checkbox" name="Funcionalidades[{{acaofuncionalidade.idfuncionalidade}}]" class="customckbx ckbpai_{{acaofuncionalidade.idfuncionalidade}}" data-idfuncionalidade="{{acaofuncionalidade.idfuncionalidade}}"></td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                {% else %}

                    {% if auxNomeFunc != acaofuncionalidade.nome_funcionalidade %}
                        {% set auxNomeFunc = acaofuncionalidade.nome_funcionalidade %}
                        <tr>
                            <td class="seccond-item" height="39px;" colspan="3">
                                <span class="glyphicon glyphicon-menu-right" aria-hidden="true"></span>
                                &nbsp;{{acaofuncionalidade.nome_funcionalidade}}</div>
                        </td>
                    </tr>

                {% endif %}
                <tr>
                    <td></td>
                    <td >
                        <table width="100%" height="39px;" style="border-bottom:1px solid lightblue" class="">
                            <tr>
                                <td>{{acaofuncionalidade.nome_acao}}</td>
                            </tr>
                        </table>
                    </td>
                    <td>
                        <table width="100%" style="border-bottom:1px solid lightblue">
                            <tr>
                                <td><input type="checkbox" {{ acaofuncionalidade.id_permissao? 'checked=\'checked\' ' }} name="acoesFuncionalidades[{{acaofuncionalidade.idacaofuncionalidade}}]" class="customckbx ckbfilho_{{acaofuncionalidade.pai_id}}" data-idpai="{{acaofuncionalidade.pai_id}}"></td>
                            </tr>
                        </table>
                    </td>
                </tr>
            {% endif %}
        {% endfor %}
    </table>
</fieldset>
</div>
</div>