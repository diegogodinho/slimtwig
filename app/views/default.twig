                    {# @Scripts.Render("~/Content/Interno/js/JsLayoutInterno") 
                    @Scripts.Render("~/bundles/jqueryval")                     #}
                    

                    <script>
                        $(document).ajaxError(function (event, jqxhr, settings, thrownError) {
                            if (jqxhr.status == 403) {
                                window.location.href = "{{ path_for('login') }}";
                            }
                        });

                        function GetVersion() {
                            if ($("#versao").text() == "") {
                                $.get(window.location.origin + '/Base/VersionApp/', function (result) {
                                    $("#versao").text(result);
                                    $('#modal-versao').modal('show');
                                });
                            } else 
                                $('#modal-versao').modal('show');
                            }
                        
                        $(function () {});
                    </script>

                    {% block script %}{% endblock %}
