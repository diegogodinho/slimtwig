{% extends 'default.twig' %}
{% block title %}
    Propaganda Vitrine
{% endblock %}
{% block breadcrumbs %}
    <li>
        <i class="fa fa-angle-right"></i>
        <a href="{{path_for('propagandavitrine')}}">Propagandas Vitrine</a>
    </li>
{% endblock %}
{% block header %}    
{% endblock %}
{% block content %}
    <div class="row custom-spacing-top">
        <div class="col-lg-1">
            <a href="{{ path_for('propagandavitrine.createview') }}" class="btn btn-primary">Nova Propaganda Vitrine</a>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="box box-color box-bordered">
                <div class="box-title">
                    <h3>
                        <i class="fa fa-table"></i>
                        Propagandas vitrine
                    </h3>
                </div>
                <div class="box-content nopadding">
                    <input type="hidden" id="Titulo" value="Bairro"/>

                    <table class="table table-hover table-nomargin table-bordered order-column datatable" data-path="{{path_for('propagandavitrine')}}" data-path-actdeact="{{ path_for('propagandavitrine.actdeact',{'id' : 0 }) }}" data-path-edit="{{ path_for('propagandavitrine.editview',{'id' : 0 }) }}" id="propagandavitrinetable">
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th class="text-center">Acoes</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block script %}
    <script src="{{base_url()}}/app/template/interno/js/plugins/datatables/jquery.dataTables.js"></script>
    <script src="{{base_url()}}/app/scriptsjs/propagandavitrine/index.js"></script>
    {% if errors %}        
    {% endif %}

{% endblock %}