{% extends 'default.twig' %}
{% block title %}
    Estados
{% endblock %}
{% block breadcrumbs %}
    <li>
        <i class="fa fa-angle-right"></i>
        <a href="{{path_for('estado')}}">Estados</a>
    </li>
{% endblock %}
{% block content %}
    <div class="row">
        <div class="col-lg-1">
            <a href="{{ path_for('estado.createview') }}" class="btn btn-primary">Novo Estado</a>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="box box-color box-bordered">
                <div class="box-title">
                    <h3>
                        <i class="fa fa-table"></i>
                        Estados
                    </h3>
                </div>
                <div class="box-content nopadding">
                    <input type="hidden" id="Titulo" value="Bairro"/>

                    <table class="table table-hover table-nomargin table-bordered order-column datatable" data-path="{{path_for('estado')}}" data-path-actdeact="{{ path_for('estado.actdeact',{'id' : 0 }) }}" data-path-edit="{{ path_for('estado.editview',{'id' : 0 }) }}" id="estadotable">
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th>Sigla</th>
                                <th class="text-center"></th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block script %}
    <script src="{{base_url()}}/app/template/interno/js/plugins/datatables/jquery.dataTables.js"></script>
    <script src="{{base_url()}}/app/scriptsjs/estado/index.js"></script>
    {% if errors %}
        {# <script type="text/javascript">
            $(function () {
                //$('#modal-validation-errors').modal('show');
            });
        </script> #}
    {% endif %}

{% endblock %}