{% extends 'default.twig' %}
{% block content %}
    <div class="row">
        <div id="breadcrumb" class="col-md-12">
            <ol class="breadcrumb">
                <li>
                    <a href="#">Tags</a>
                </li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-md-offset-10 col-md-2">
            <a href="{{ path_for('tag.createview') }}" class="btn btn-classic">new Tag</a>
        </div>
    </div>
    <div class="box-content">
        <div class="row custom-spacing-top">
            <div class="col-lg-12">
                <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
                    <div class="panel panel-default">
                        <div class="panel-heading custom-accordion-filtro" role="tab" id="headingOne" data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                            <h4 class="panel-title">
                                <i class="fa fa-th-list"></i>&nbsp;&nbsp;Filtros
                            </h4>
                        </div>
                        <div id="collapseOne" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-md-4">
                                        <label class="label-control">Name</label>
                                        <input type="text" class="form-control" name="name" id="nameSearch"></input>
                                    </div>
                                </div>
                                <div class="row" style="margin-top:15px;">
                                    <div class="col-lg-2">                                        
                                        <button type="button" class="btn btn-default" id="clearFilter">Clear</button>
                                        <button class="btn btn-primary" id="btnFiltrar">Filtrar</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <h4 class="page-header">Tags</h4>
                <table class="table table-bordered table-striped table-hover table-heading table-datatable" id="tagtable">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Active</th>
                            <th></th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block script %}
<script src="{{base_url()}}/app/template/plugins/datatables/dataTables.js"></script>
<script src="{{base_url()}}/app/template/plugins/datatables/dataTables.bootstrap.js"></script>

<script type="text/javascript">
    $(function () {

        var table = $('#tagtable').DataTable({
            "ordering": false,
            "serverSide": true,
            "bFilter": false,
            "ajax": {
                "url": "{{path_for('tag')}}",
                "type": "POST",
                "data": function (d) {
                    d.name = $('#nameSearch').val();

                }
            },
            "columns": [
                {
                    "data": "id"
                }, {
                    "data": "name"
                }, {
                    "data": "active",
                    "render": function (data, type, row) {
                        var htmlResult;
                        if (row.active) {
                            htmlResult = '<span style="color:green">Active</span>';
                        } else {
                            htmlResult = '<span style="color:red">Inative</span>';
                        }
                        return htmlResult;
                    }
                }, {
                    "data": null,
                    orderable: false,
                    "className": "center",
                    "render": function (data, type, row) {
                        var htmlResult = '<a class="btn editar-grid" rel="tooltip" title="Edit" data-original-title="Editar" style="color:green;"><i class="fa fa-edit" ></i></a> ';
                        if (row.active) {
                            htmlResult += ' <a href="#" class="btn activeDeactive-grid" rel="tooltip" title="Deactivate" data-original-title="Deactivate" >' + '<i class="fa fa-thumbs-down"></i>	</a>';
                        } else {
                            htmlResult += ' <a href="#" class="btn activeDeactive-grid" rel="tooltip" title="Activate" data-original-title="Activate" >' + '<i class="fa fa fa-thumbs-o-up"></i>	</a>';
                        }
                        return htmlResult;
                    }
                }
            ]
        });

        $('#tagtable').on('draw.dt', function () {
            $(".editar-grid").click(function () {
                var data = $('#tagtable').DataTable().row($(this).parents('tr')).data();
                var _url = "{{ path_for('tag.editview',{'id' : 0 }) }}";
                _url = _url.replace(0, data.id);
                window.location = _url;
            });

            $(".activeDeactive-grid").click(function () {
                var data = $('#tagtable').DataTable().row($(this).parents('tr')).data();
                var titulo = data.name;
                var _urlDelete = "{{ path_for('tag.actdeact',{'id' : 0 }) }}";
                _urlDelete = _urlDelete.replace('0', data.id);
                $.post(_urlDelete, {
                    ID: data.ID
                }, function (retorno) {
                    table.ajax.reload();
                }).error(function (result) {
                    bootbox.alert('Failed');
                });
            });
        });

        $('#btnFiltrar').click(function () {
            table.ajax.reload(null, false);
        });
        $('#clearFilter').click(function () {
            $('#nameSearch').val('');
            table.ajax.reload(null, false);
        });

    });
</script>

{% if errors %}
    <script type="text/javascript">
        $(function () {
            //$('#modal-validation-errors').modal('show');
        });
    </script>
{% endif %}

{% endblock %}