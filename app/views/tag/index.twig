{% extends 'default.twig' %}
{% block title %}
    Tags
{% endblock %}
{% block breadcrumbs %}
    <li>
        <i class="fa fa-angle-right"></i>
        <a href="{{path_for('tag')}}">Tags</a>
    </li>
{% endblock %}
{% block content %}
    <div class="row custom-spacing-top">
        <div class="col-lg-12">
            <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
                <div class="panel panel-default">
                    <div class="panel-heading custom-accordion-filtro" role="tab" id="headingOne" data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                        <h4 class="panel-title">
                            <i class="fa fa-th-list"></i>&nbsp;&nbsp;Filtros
                        </h4>
                    </div>
                    <div id="collapseOne" class="panel-collapse collapse.in collapse in" role="tabpanel" aria-labelledby="headingOne">
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-md-4">
                                    <label class="label-control">Nome</label>
                                    <input type="text" class="form-control" name="name" id="nameSearch"></input>
                                </div>
                                <div class="col-md-4">
                                    <label class="label-control">Status</label>
                                    <select id="activeSearch" class="form-control">
                                        <option disabled="disabled" selected="selected" value="value"></option>
                                        <option value="1">Ativo</option>
                                        <option value="0">Inativo</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row" style="margin-top:15px;">
                                <div class="col-lg-2">
                                    <button type="button" class="btn btn-default" id="clearFilter">Limpar</button>
                                    <button class="btn btn-primary" id="btnFiltrar">Filtrar</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-1 col-lg-offset-11">
            <a href="{{ path_for('tag.createview') }}" class="btn btn-primary">Nova Tag</a>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="box box-color box-bordered">
                <div class="box-title">
                    <h3>
                        <i class="fa fa-table"></i>
                        Tags
                    </h3>
                </div>
                <div class="box-content nopadding">
                    <input type="hidden" id="Titulo" value="Bairro"/>

                    <table class="table table-hover table-nomargin table-bordered order-column datatable" 
                    data-path="{{path_for('tag')}}" 
                    data-path-actdeact="{{ path_for('tag.actdeact',{'id' : 0 }) }}" 
                    data-path-edit="{{ path_for('tag.editview',{'id' : 0 }) }}" 
                    id="tagtable">
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th>Status</th>
                                <th></th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block script %}
    <script src="{{base_url()}}/app/template/interno/js/plugins/datatables/jquery.dataTables.js"></script>
    <script src="{{base_url()}}/app/scripts/tag/index.js"></script>
    {% if errors %}
        {# <script type="text/javascript">
            $(function () {
                //$('#modal-validation-errors').modal('show');
            });
        </script> #}
    {% endif %}

{% endblock %}