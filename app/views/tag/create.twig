{% extends 'default.twig' %}
{% block content %}
    <div class="row">
        <div id="breadcrumb" class="col-md-12">
            <ol class="breadcrumb">
                <li>
                    <a href="{{ path_for('tag.indexview') }}">Tag</a>
                </li>
                <li>
                    <a href="{{ path_for('tag.createview') }}">Manter Tag</a>
                </li>
            </ol>
        </div>
    </div>
    <div class="box-content">
        <h4 class="page-header">Manter Tag</h4>
        {% if old.id %}
            <form novalidate="novalidate" class="form-horizontal" role="form" action="{{ path_for('tag.edit',{ id: old.id }) }}" method="post">
            {% else %}
                <form novalidate="novalidate" class="form-horizontal" role="form" action="{{ path_for('tag.create') }}" method="post">
                {% endif %}
                <input type="hidden" name="id" value="{{ old.id }}"/>
                <div class="form-group {{ errors.name ? 'has-error': '' }}">
                    <label for="inputEmail3" class="col-md-2 control-label">Nome</label>
                    <div class="col-sm-10 col-md-5">
                        <input type="text" class="form-control" id="name" placeholder="Name" name="name" value="{{ old.name }}"/>
                    </div>
                    {% if errors.name %}
                        <small class="help-block col-sm-offset-2 col-sm-9">{{ errors.name | first }}</small>
                    {% endif %}
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <a type="button" class="btn btn-default" href="{{ path_for('tag.indexview') }}">Voltar</a>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </div>
            </form>
        </div>

    {% endblock %}

    {% block script %}

        {% if errors %}
            <script type="text/javascript">
                $(function () {
                    //$('#modal-validation-errors').modal('show');
                });
            </script>
        {% endif %}

    {% endblock %}