{% extends 'default.twig' %}
{% block title %}
    Cidade
{% endblock %}
{% block breadcrumbs %}
    <li>
        <i class="fa fa-angle-right"></i>
        {% if old.id %}
            <a href="{{ path_for('cidade.editview',{ id: old.id }) }}">Cidade</a>
        {% else  %}
            <a href="{{ path_for('cidade.createview') }}">Nova Cidade</a>
        {% endif %}
    </li>
{% endblock %}
{% block content %}
    <div class="box-content">
        <h4 class="page-header">Manter Cidade</h4>
        <div class="custom-box">
            {% if old.id %}
                <form novalidate="novalidate" role="form" action="{{ path_for('cidade.edit',{ id: old.id }) }}" method="post">
                {% else %}
                    <form novalidate="novalidate" role="form" action="{{ path_for('cidade.create') }}" method="post">
                    {% endif %}
                    <input type="hidden" name="id" value="{{ old.id }}"/>
                    <div class="form-group {{ errors.estado ? 'has-error': '' }}">
                        <div class="col-xs-12 col-sm-8 col-md-6 col-lg-4">
                            <label for="nome" class="control-label">Estado</label>
                            <select class="form-control" id="estado_id" name="estado">
                                <option disabled="disabled" selected="selected" value="value"></option>
                                {% for estado in estados %}
                                    {% set selected = '' %}
                                    {% if (estado.id == old.estado) %}
                                        {% set selected = 'selected' %}
                                    {% endif %}
                                    <option value="{{estado.id}}" {{ selected }}>{{estado.nome}}</option>
                                {% endfor %}
                            </select>
                            {% if errors.estado %}
                                <small class="help-block col-sm-9">{{ errors.estado | first }}</small>
                            {% endif %}
                        </div>
                    </div>
                    <div class="form-group {{ errors.nome ? 'has-error': '' }}">
                        <div class="col-xs-12 col-sm-8 col-md-6 col-lg-4">
                            <label for="nome" class="control-label">Nome</label>
                            <input type="text" class="form-control" id="nome" placeholder="Nome" name="nome" value="{{ old.nome }}"/>
                            {% if errors.nome %}
                                <small class="help-block col-sm-9">{{ errors.nome | first }}</small>
                            {% endif %}
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-sm-offset-2 col-sm-10 custom-spacing-top custom-margin-left">
                            <a type="button" class="btn btn-default" href="{{ path_for('cidade.indexview') }}">Voltar</a>
                            <button type="submit" class="btn btn-primary">Salvar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    {% endblock %}
    {% block script %}{% endblock %}