{% extends 'default.twig' %}
{% block content %}
    <div class="row">
        <div id="breadcrumb" class="col-md-12">
            <ol class="breadcrumb">
                <li>
                    <a href="#">Users</a>
                </li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-md-offset-10 col-md-2">
            <a href="{{ path_for('user.createview') }}" class="btn btn-classic">new User</a>
        </div>
    </div>
    <div class="box-content">
        <h4 class="page-header">Users</h4>
        <table class="table table-bordered table-striped table-hover table-heading table-datatable" id="usertable">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Status</th>
                    <th>Login</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
{% endblock %}

{% block script %}
    <script src="{{base_url()}}/app/template/plugins/datatables/dataTables.js"></script>
    <script src="{{base_url()}}/app/template/plugins/datatables/dataTables.bootstrap.js"></script>

    <script type="text/javascript">
        $(function () {

            var table = $('#usertable').DataTable({
                "ordering": false,
                "serverSide": true,
                "bFilter": false,
                "ajax": {
                    "url": "{{path_for('user')}}",
                    "type": "POST"
                },
                "columns": [
                    {
                        "data": "name"
                    }, {
                        "data": "email"
                    }, {
                        "data": "active",
                        "render": function (data, type, row) {
                            var htmlResult;
                            if (row.active) {
                                htmlResult = '<span style="color:green">Active</span>';
                            } else {
                                htmlResult = '<span style="color:red">Inative</span>';
                            }
                            return htmlResult;
                        }
                    }, {
                        "data": "login"
                    }, {
                        "data": null,
                        orderable: false,
                        "className": "center",
                        "render": function (data, type, row) {
                            var htmlResult = '<a class="btn editar-grid" rel="tooltip" title="Edit" data-original-title="Editar" style="color:green;"><i class="fa fa-edit" ></i></a> ';
                            if (row.active) {
                                htmlResult += ' <a href="#" class="btn activeDeactive-grid" rel="tooltip" title="Deactivate" data-original-title="Deactivate" >' + '<i class="fa fa-thumbs-down"></i>	</a>';
                            } else {
                                htmlResult += ' <a href="#" class="btn activeDeactive-grid" rel="tooltip" title="Activate" data-original-title="Activate" >' + '<i class="fa fa fa-thumbs-o-up"></i>	</a>';
                            }
                            return htmlResult;
                        }
                    }
                ]
            });

            $('#usertable').on('draw.dt', function () {
                $(".editar-grid").click(function () {
                    var data = $('#usertable').DataTable().row($(this).parents('tr')).data();
                    var _url = "{{ path_for('user.editview',{'id' : 0 }) }}";
                    _url = _url.replace(0, data.id);
                    window.location = _url;
                });

                $(".activeDeactive-grid").click(function () {
                    var data = $('#usertable').DataTable().row($(this).parents('tr')).data();
                    var titulo = data.name;
                    var _urlDelete = "{{ path_for('user.actdeact',{'id' : 0 }) }}";
                    _urlDelete = _urlDelete.replace('0', data.id);
                    $.post(_urlDelete, {
                        ID: data.ID
                    }, function (retorno) {
                        table.ajax.reload();

                    }).error(function (result) {
                        bootbox.alert('Failed');
                    });
                });
            });
        });
    </script>

    {% if errors %}
        <script type="text/javascript">
            $(function () {
                //$('#modal-validation-errors').modal('show');
            });
        </script>
    {% endif %}

{% endblock %}