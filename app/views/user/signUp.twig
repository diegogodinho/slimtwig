{% extends 'default.twig' %}

{% block content %}

  <div class="row">
    <div id="breadcrumb" class="col-md-12">
      <ol class="breadcrumb">
        <li>
          <a href="#">User</a>
        </li>
        <li>
          <a href="#">Sign Up</a>
        </li>
      </ol>
    </div>
  </div>  
  <form class="form-horizontal" role="form" action="{{ path_for('signup') }}" method="post">
    <input type="hidden" name="id"/>
    <div class="form-group {{ errors.email ? 'has-error': '' }}">
      <label for="inputEmail3" class="col-md-2 control-label">Name</label>
      <div class="col-sm-10 col-md-5">
        <input type="text" class="form-control" id="name" placeholder="Name" name="name"/>
      </div>
      {% if errors.name %}
        <small class="help-block col-sm-offset-2 col-sm-9">{{ errors.name | first }}</small>
      {% endif %}
    </div>
    <div class="form-group {{ errors.login ? 'has-error': '' }}">
      <label for="inputEmail3" class="col-md-2 control-label">Login</label>
      <div class="col-sm-10 col-md-5">
        <input type="text" class="form-control" id="inputEmail3" placeholder="Login" name="login"/>        
      </div>
      {% if errors.login %}
          <small class="help-block col-sm-offset-2 col-sm-9">{{ errors.login | first }}</small>
        {% endif %}
    </div>
    <div class="form-group {{ errors.login ? 'has-error': '' }}">
      <label for="inputEmail3" class="col-md-2 control-label">E-mail</label>
      <div class="col-sm-10 col-md-5">
        <input type="email" class="form-control" id="inputEmail3" placeholder="Email" name="email"/>
        
      </div>
       {% if errors.email %}
          <small class="help-block col-sm-offset-2 col-sm-9">{{ errors.email | first }}</small>
        {% endif %}
    </div>
    <div class="form-group {{ errors.login ? 'has-error': '' }}">
      <label for="inputEmail3" class="col-md-2 control-label">Password</label>
      <div class="col-sm-10 col-md-5">
        <input type="password" class="form-control" id="inputEmail3" placeholder="Password" name="password"/>      
      </div>
        {% if errors.password %}
          <small class="help-block col-sm-offset-2 col-sm-9">{{ errors.password | first }}</small>
        {% endif %}
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button ui-sref="Admin.ListUser" type="button" class="btn btn-default">Go back</button>
        <button type="submit" class="btn btn-primary">Save</button>
      </div>

    </div>
  </form>

{% endblock %}
