{% extends 'default.twig' %}
{% block content %}
  <div class="row">
    <div id="breadcrumb" class="col-md-12">
      <ol class="breadcrumb">
        <li>
          <a href="{{ path_for('user.index') }}">User</a>
        </li>
        <li>
          <a href="{{ path_for('signup') }}">Maintain User</a>
        </li>
      </ol>
    </div>
  </div>  
  <div class="box-content">
    <h4 class="page-header">Maintain User</h4>
     {% if old.id %}
          <form novalidate="novalidate" class="form-horizontal" role="form" action="{{ path_for('user.edit',{ id: old.id }) }}" method="post">
      {% else %}
          <form novalidate="novalidate" class="form-horizontal" role="form" action="{{ path_for('signup') }}" method="post">
      {% endif %}
      <input type="hidden" name="id" value="{{ old.id }}"/>
      <div class="form-group {{ errors.name ? 'has-error': '' }}">
        <label for="inputEmail3" class="col-md-2 control-label">Name</label>
        <div class="col-sm-10 col-md-5">
          <input type="text" class="form-control" id="name" placeholder="Name" name="name" value="{{ old.name }}"/>
        </div>
        {% if errors.name %}
          <small class="help-block col-sm-offset-2 col-sm-9">{{ errors.name | first }}</small>
        {% endif %}
      </div>
      <div class="form-group {{ errors.login ? 'has-error': '' }}">
        <label for="inputEmail3" class="col-md-2 control-label">Login</label>
        <div class="col-sm-10 col-md-5">
          <input type="text" class="form-control" id="inputEmail3" placeholder="Login" name="login" value="{{ old.login }}"/>
        </div>
        {% if errors.login %}
          <small class="help-block col-sm-offset-2 col-sm-9">{{ errors.login | first }}</small>
        {% endif %}
      </div>
      <div class="form-group {{ errors.email ? 'has-error': '' }}">
        <label for="inputEmail3" class="col-md-2 control-label">E-mail</label>
        <div class="col-sm-10 col-md-5">
          <input type="email" class="form-control" id="inputEmail3" placeholder="Email" name="email" value="{{ old.email }}"/>

        </div>
        {% if errors.email %}
          <small class="help-block col-sm-offset-2 col-sm-9">{{ errors.email | first }}</small>
        {% endif %}
      </div>
      <div class="form-group {{ errors.password ? 'has-error': '' }}">
        <label for="inputEmail3" class="col-md-2 control-label">Password</label>
        <div class="col-sm-10 col-md-5">
          <input type="password" class="form-control" id="inputEmail3" placeholder="Password" name="password"/>
        </div>
        {% if errors.password %}
          <small class="help-block col-sm-offset-2 col-sm-9">{{ errors.password | first }}</small>
        {% endif %}
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <a type="button" class="btn btn-default" href="{{ path_for('user.index') }}">Go back</a>
          <button type="submit" class="btn btn-primary">Save</button>
        </div>
      </div>
    </form>
  </div>

{% endblock %}

{% block script %}

  {% if errors %}
    <script type="text/javascript">
      $(function() {
        //$('#modal-validation-errors').modal('show');
      });
    </script>
  {% endif %}

{% endblock %}